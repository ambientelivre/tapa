        <name>Tapa</name>
        <author_email>marcello@oncase.com.br</author_email>
        <author_name>@marpontes</author_name>
        <company_name>Oncase</company_name>
        <company_url>http://onca.se</company_url>
        <creation_date>2014-11-26</creation_date>
        <version>0.2.0</version>
    </info>
</cpk> 
